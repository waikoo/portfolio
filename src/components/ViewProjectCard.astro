---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import TextWithArrow from "./TextWithArrow.astro";

interface Props {
  imgClass?: string;
  source: ImageMetadata;
  name: string;
  arrowColor: string;
  arrowBg: string;
  className: string;
  imgHeight: string;
  imgWidth: string;
  link: string;
  borderRadius: string;
  invertArrow: boolean;
}

const {
  imgClass,
  source,
  name,
  arrowColor,
  arrowBg,
  className,
  imgHeight,
  imgWidth,
  link,
  borderRadius,
  invertArrow,
} = Astro.props;
---

<article
  class={`${className} ${borderRadius} font-['Jost'] shadow-[0_4px_30px_0_rgba(0,0,0,0.25)]`}
>
  <a href={link}>
    <Image
      src={source}
      alt={`project preview image of my ${name.toLowerCase()} project object-cover`}
      width={+imgWidth}
      height={+imgHeight}
      class={`${imgClass} shadow-[0_4px_8px_0_rgba(0,0,0,0.50)] ${borderRadius}`}
    />
    <p
      class="uppercase text-right text-[20px] xl:text-[38px] font-bold text-[#F2F3E3] whitespace-nowrap mt-[32px]"
    >
      {name}
    </p>
    <TextWithArrow
      arrowColor={arrowColor}
      invertArrow={invertArrow}
      arrowBgColor={arrowBg}
      className="justify-end mt-[12px] transition-colors duration-200 hover:drop-shadow-[0px_0px_3px_#e296f5]"
      >View Project</TextWithArrow
    >
  </a>
</article>
