---
import PersonProjectCardImage from "./PersonProjectCardImage.astro";
import PersonProjectCardVideo from "./PersonProjectCardVideo.astro";

const { src, description, id } = Astro.props;
---

{
  Array.isArray(src) ? (
    <PersonProjectCardVideo src={src} id={id} />
  ) : (
    <PersonProjectCardImage src={src} description={description} />
  )
}
