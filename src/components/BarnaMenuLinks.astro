    style={{ backgroundColor: color }}
    href={live}
    data-color={color}
    class={`p-[8px] px-[11px] 2xl:px-[13px] text-black rounded-full text-[13px] sm:text-[1rem] font-['Jost'] font-semibold flex items-center gap-2 drop-shadow-[5px_5px_8px_rgba(0,0,0,0.60)] transition-all duration-200 ${hideCliProjectsGithub} link hover:shadow-[0_0_7px_--hover-color]`}
