---
import "@fontsource/jost/600.css";

const { live, github, color, id, className, isInverted } = Astro.props;
const hideCliProjectsGithub = id === 3 || id === 4 ? "hidden" : "";
const alignFormatColorsGithubLinkLeft =
  id === 4 ? "flex-row" : "flex-row-reverse";
---

<script>
  const links = document.querySelectorAll(
    ".link",
  ) as NodeListOf<HTMLAnchorElement>;

  if (links) {
    links.forEach((link) => {
      link.addEventListener("mouseenter", () => {
        link.style.filter = `drop-shadow(0px 0px 7px ${link.dataset.color})`;
      });
      link.addEventListener("mouseleave", () => {
        link.style.filter = `none`;
      });
    });
  }
</script>

<div
  class={`flex gap-5 font-['Jost'] font-semibold items-stretch justify-between  ${alignFormatColorsGithubLinkLeft} w-full ${isInverted ? "xl:justify-end" : "sm:justify-start "} ${className}`}
>
