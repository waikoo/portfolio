---
const { name, color } = Astro.props;
const textColor = name === "EVELIN" ? `text-[#e296f5]` : `text-white`;
---

<div
  class={`font-['Jost'] font-bold grid grid-rows-3 gap-0 text-[11px] lg:mt-0 ${textColor} justify-items-start quizzicalFont`}
  style={{ color: color }}
>
  <p class="translate-y-[7px] lg:mt-[-6px]">
    {name === "BARNA" ? "FRONT" : "UI"}
  </p>
  <p class="-mt-[1px] lg:-mt-[2px]">{name === "BARNA" ? "END" : "UX"}</p>
  <p class="-mt-[7px] lg:-mt-[5px]">
    {name === "BARNA" ? "DEVELOPER" : "DESIGNER"}
  </p>
</div>
