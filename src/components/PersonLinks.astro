---
import PersonHeaderLink from "./PersonHeaderLink.astro";

const { lowercasedName, className, isHamburger, color } = Astro.props;
const { url: currentUrl } = Astro.request;
const isOnProjects = currentUrl.includes("projects");
const isOnCV = currentUrl.includes("cv");
const isOnContact = currentUrl.includes("contact");
const isOnAbout = currentUrl.includes("about");
---

<ul class={`flex text-[1rem] pt-6 ${className}`}>
  <PersonHeaderLink href="/" isHamburger={isHamburger} lowercasedName={lowercasedName}>Home</PersonHeaderLink>
  <PersonHeaderLink
    href={`/${lowercasedName}/projects`}
    isCurrentPage={isOnProjects}
    isHamburger={isHamburger}
    color={color}
    lowercasedName={lowercasedName}
    >Projects</PersonHeaderLink
  >
  <PersonHeaderLink
    href={`/${lowercasedName}/cv`}
    isCurrentPage={isOnCV}
    isHamburger={isHamburger}
    lowercasedName={lowercasedName}
    color={color}>CV</PersonHeaderLink
  >

  <PersonHeaderLink
    href={`/${lowercasedName}/contact`}
    isCurrentPage={isOnContact}
    isHamburger={isHamburger}
    lowercasedName={lowercasedName}
    color={color}>Contact</PersonHeaderLink
  >
  <PersonHeaderLink
    href={`/${lowercasedName}/about`}
    isCurrentPage={isOnAbout}
    isHamburger={isHamburger}
    lowercasedName={lowercasedName}
    color={color}>About</PersonHeaderLink
  >
</ul>
