---
import PersonHeaderLink from "./PersonHeaderLink.astro";

const { lowercasedName, className, isHamburger } = Astro.props;
const { url: currentUrl } = Astro.request;
const isOnProjects = currentUrl.includes(lowercasedName);
const isOnCV = currentUrl.includes("cv");
const isOnContact = currentUrl.includes("contact");
const isOnAbout = currentUrl.includes("about");
---

<ul class={`flex text-[1rem] pt-6 ${className}`}>
  <PersonHeaderLink href="/" isHamburger={isHamburger}>Home</PersonHeaderLink>
  <PersonHeaderLink
    href={`/${lowercasedName}`}
    isCurrentPage={isOnProjects}
    isHamburger={isHamburger}>Projects</PersonHeaderLink
  >
  <PersonHeaderLink
    href={`/${lowercasedName}/cv`}
    isCurrentPage={isOnCV}
    isHamburger={isHamburger}>CV</PersonHeaderLink
  >

  <PersonHeaderLink
    href={`/${lowercasedName}/contact`}
    isCurrentPage={isOnContact}
    isHamburger={isHamburger}>Contact</PersonHeaderLink
  >
  <PersonHeaderLink
    href={`/${lowercasedName}/about`}
    isCurrentPage={isOnAbout}
    isHamburger={isHamburger}>About</PersonHeaderLink
  >
</ul>
