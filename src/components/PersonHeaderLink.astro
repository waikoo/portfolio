---
import "@fontsource/jost/400.css";
import { getHeaderNavLinkTextColor } from "../utils/getHeaderNavLinkTextColor.js";
import PersonHeaderLinkCurrent from "./PersonHeaderLinkCurrent.astro";
const { href, isCurrentPage, isHamburger, lowercasedName } = Astro.props;

const url = Astro.request.url.toString();
const textSize = isHamburger ? "text-[26px]" : "sm:text-[32px]";
const dropShadow =
  lowercasedName === "evelin"
    ? "hover:drop-shadow-[0px_0px_3px_#e296f5]"
    : "hover:drop-shadow-[0px_0px_3px_yellow]";
const textColor = getHeaderNavLinkTextColor(
  href,
  isCurrentPage,
  isHamburger,
  url,
);
---

<li class="font-['Jost'] font-regular">
  <a
    class={`${textColor} ${textSize} lg:text-[17px] flex flex-col relative transition-all duration-200 ${dropShadow}`}
    href={`${href}`}
  >
    <slot />
    <PersonHeaderLinkCurrent
      isCurrentPage={isCurrentPage}
      isHamburger={isHamburger}
      href={href}
    />
  </a>
</li>
