---
import "@fontsource/jost/400.css";
const { name, familyName, color, gridColumn, gridRow, small } = Astro.props;

const fontSize = small ? "text-[23px]" : "text-[190px]";

const evelinBlendMode = name === "EVELIN" ? "mix-blend-difference" : "";
const evelinNoMargin = name === "EVELIN" ? "" : "ml-10";
---

<div
  style={`
  color: ${color};
  grid-column: ${gridColumn};
  grid-row: ${gridRow};`}
  class=`${fontSize} gap-0 flex flex-col justify-content-start ${evelinNoMargin} mt-5 ${evelinBlendMode}`
>
  <p class="-mb-[56px]">{name}</p>
  <p class="m-0">{familyName}</p>
</div>

<style>
  div {
    font-family: "Jost", sans-serif;
    font-weight: 400;
  }
</style>
