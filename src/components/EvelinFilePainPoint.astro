---
import IconTriangleMobile from "./IconTriangleMobile.astro";

const { bgColor, className } = Astro.props;
---

<p class={`relative text-[13px] xl:text-[18px] ${className}`}>
  <IconTriangleMobile
    bgColor={bgColor}
    className="absolute top-[3px] left-[-13px] xl:top-[5px]"
  />
  <slot />
</p>

<style>
  p {
    font-family: "Jost", sans-serif;
  }
</style>
