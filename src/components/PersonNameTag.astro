---
import "@fontsource/jost/700.css";
import HeroName from "./HeroName.astro";
import PersonOccupationTag from "./PersonOccupationTag.astro";
const { familyName, name } = Astro.props;

const reverseFlex = name === "EVELIN" ? "flex-row-reverse" : "flex-row";
const textColor = name === "EVELIN" ? "#fbd3d3" : "#fffb20";
---

<div class={`flex ${reverseFlex} gap-3 z-50 mt-[30px]`}>
  <HeroName
    familyName={familyName}
    name={name}
    color={textColor}
    gridColumn="1/2"
    gridRow="1/2"
    small="true"
    close="true"
  />

  <PersonOccupationTag name={name} />
</div>
