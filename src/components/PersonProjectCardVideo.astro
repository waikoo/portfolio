---
const { src, id } = Astro.props;
const videoWidth =
  id === 4 ? "sm:w-[70%] lg:w-[40%] 2xl:w-[350px]" : "w-[640px] 2xl:w-[987px]";
---

<video
  class={`rounded-[20px] ${videoWidth}`}
  autoplay
  loop
  muted
  playsinline
  transition:persist
>
  <source type="video/mp4; codecs=av01" src={src[0]} />
  <source type="video/mp4" src={src[1]} />
</video>
