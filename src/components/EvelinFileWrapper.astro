---
const { title, bgColor, className, cardBgColor, id, paddingX, paddingY } =
  Astro.props;
---

<article
  style={{ backgroundColor: cardBgColor }}
  class={`relative rounded-[20px_0px_20px_20px] sm:rounded-[20px] xl:py-[110px] sm:p-[50px] w-full ${className}`}
>
  <div
    class="absolute top-[-1px] right-[-1px] px-[8px] xl:px-[16px]"
    style={{ backgroundColor: bgColor }}
  >
    <h2
      class={`font-['Jost'] font-bold text-[26px] sm:text-[35px] xl:text-[55px] tracking-[-2px] xl:tracking-[-6px] px-[12px]]`}
      id={id}
    >
      {title}
    </h2>
  </div>

  <section class={`${paddingX} ${paddingY} sm:text-[14px] mx-auto`}>
    <slot />
  </section>
</article>
