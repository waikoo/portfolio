---
import "@fontsource/jost/400.css";

const { description, github } = Astro.props;
---

<p class="lg:text-[16px] text-white translate-y-4 w-[85%] ml-auto">
  {description}
</p>

<a
  href={github}
  class="underline underline-offset-2 lg:text-[13px] text-[#eaebd1] tracking-wide"
  >Read More</a
>

<style>
  a {
    font-family: "Jost", sans-serif;
    font-weight: 400;
  }

  p {
    line-height: 1.2;
  }
</style>
