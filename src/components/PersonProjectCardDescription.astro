---
import "@fontsource/jost/400.css";

const { description, github, id, className, isInverted, name, firstName } =
  Astro.props;
const autoMargin = id === 2 || id === 4 ? "mr-auto" : "ml-auto";
const invertTextAlign = isInverted ? "lg:text-left" : "lg:text-right";
const color = firstName === "barna" ? "text-[#eaebd1]" : "text-[#decff4]";
---

<div
  class={`flex gap-[12px] sm:gap-[20px] lg:gap-[16px] flex-col ${color} ${className}`}
>
  <p
    class={`text-[15px] sm:text-[16px] 2xl:text-[18px] ${autoMargin} text-center ${invertTextAlign}`}
  >
    {description}
  </p>

  {
    firstName === "barna" ? (
      <a
        href={`${github}?tab=readme-ov-file#readme`}
        class={`underline underline-offset-2 text-[16px] sm:text-[13px] 2xl:text-[15px] tracking-wide text-center ${invertTextAlign}`}
      >
        Read More
      </a>
    ) : null
  }
</div>

<style>
  a,
  p {
    font-family: "Jost", sans-serif;
    font-weight: 400;
  }

  p {
    line-height: 1.2;
  }
</style>
