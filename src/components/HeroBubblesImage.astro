---
const { src } = Astro.props;
---

<picture>
  <source type="image/avif" srcset={src.replace("jpg", "avif")} />
  <source type="image/webp" srcset={src.replace("jpg", "webp")} />
  <img
    src={src}
    alt="an abstract cluster of red blobs with white speckles, floating against a deep reddish-brown background with smooth, organic shapes"
    width={1920}
    height={1080}
    class="fixed w-screen h-[100dvh] object-cover"
    transition:persist
  />
</picture>
