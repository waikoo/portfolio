---
import "@fontsource/monoton";
const { className } = Astro.props;
---

<button
  class={`tracking-[-3.1px] text-[2.1rem] sm:text-[3.4rem] xl:text-[4.8rem] md:tracking-[-7.3px] mt-[-7px] 2xl:text-[5.35rem] mx-auto grid place-items-center font-['Monoton'] ${className}`}
>
  <div
    class={`2xl:tracking-[-5.6px] text-center rounded-full mx-auto cursor-pointer max-w-fit tracking-[-1.8px] sm:tracking-[-3.6px] xl:tracking-[-4.8px]`}
  >
    <span
      class={`text-[#FFA13D] text-[1.9rem] sm:text-[3.138rem] xl:text-[4.35rem] 2xl:text-[4.65rem]`}
      >Q</span
    >
    <span class="text-[#2775E9]">u</span>
    <span class="text-[#FF82E6]">i</span>
    <span class="text-[#FCFF46]">z</span>
    <span class="text-[#D2BDFF]">z</span>
    <span class="text-[#79C19B]">i</span>
    <span class="text-[#FF7700]">c</span>
    <span class="text-[#779DFF]">a</span>
    <span class="text-[#CFDD00]">l</span>
  </div>
</button>

<style>
  div > span {
    text-shadow: 1px 1px 0.5px black;
  }

  @media (min-width: 1280px) {
    div > span {
      text-shadow: 2px 2x 1px black;
    }
  }
</style>
