---
import "@fontsource/monoton";
---

<button
  class={`tracking-[-3.1px] text-[2.3rem] md:text-[6.75rem] md:tracking-[-7.3px] mt-[-7px] xl:mt-[-25px] pt-[23px] md:w-fit mx-auto grid place-items-center font-['Monoton'] `}
>
  <div
    class={`xl:tracking-[-6.6px] text-center rounded-full mx-auto cursor-pointer max-w-fit`}
  >
    <span
      class={`text-[#FFA13D] text-[2rem] md:text-[5.938rem] xl:text-[6.25rem]`}
      >Q</span
    >
    <span class="text-[#2775E9]">u</span>
    <span class="text-[#FF82E6]">i</span>
    <span class="text-[#FCFF46]">z</span>
    <span class="text-[#D2BDFF]">z</span>
    <span class="text-[#79C19B]">i</span>
    <span class="text-[#FF7700]">c</span>
    <span class="text-[#779DFF]">a</span>
    <span class="text-[#CFDD00]">l</span>
  </div>
</button>

<style>
  div > span {
    text-shadow: 2px 2px 1px black;
  }
</style>
