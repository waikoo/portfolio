---
import IconArrowResponsive from "./IconArrowResponsive.astro";

interface Props {
  arrowColor: string;
  arrowBgColor: string;
  invertArrow?: boolean;
  className?: string;
}

const { arrowColor, arrowBgColor, className, invertArrow } = Astro.props;
---

<div class={`flex items-center gap-[5px] ${className}`}>
  <span style={{ color: arrowColor }}><slot /></span>

  <div class={`${invertArrow ? "scale-x-[-1]" : ""}`}>
    <IconArrowResponsive color={arrowColor} bgColor={arrowBgColor} />
  </div>
</div>
