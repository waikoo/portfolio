---
import IconArrowResponsive from "./IconArrowResponsive.astro";

const { className, isInverted, projectLink } = Astro.props;
const invertedStyles = isInverted ? "flex-row-reverse" : "flex-row";
const invertArrow = isInverted ? "" : "scale-x-[-1]";
---

<a
  class={`${className} flex ${invertedStyles} gap-[6px] sm:gap-[13px] items-center cursor-pointer transition-all duration-200 hover:drop-shadow-[0px_0px_3px_#e296f5]`}
  href={projectLink}
>
  <div class={`border-[#e296f5] rounded-full ${invertArrow}`}>
    <IconArrowResponsive color={"#e296f5"} bgColor={"hsla(0, 0%, 98%, 5%)"} />
  </div>

  <span
    class="text-[#e296f5] text-[16px] xl:text-[18px] font-regular font-['Jost']"
    >View Project</span
  >
</a>
