const bgStyles = noBg ? "" : "bg-[#e8e9c4]";
---

<li
  class={`${bgStyles} ${className} bullet p-1 px-5 text-[13px] sm:text-[15px] xl:text-[16px] rounded-[5px] list-none grid justify-start gap-2`}
>
  <div class="col-start-2 col-end-3">
    <slot />
  </div>
</li>

