---
const { src, description } = Astro.props;
---

<picture>
  <source type="image/avif" srcset={src.replace("jpg", "avif")} />
  <source type="image/webp" srcset={src.replace("jpg", "webp")} />
  <img
    src={src}
    alt={`A screenshot of ${description}`}
    class="rounded-[20px] 2xl:rounded-[30px] w-full object-cover block"
  />
</picture>
