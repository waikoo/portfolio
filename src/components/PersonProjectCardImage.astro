---
const { src, description } = Astro.props;
---

<div class="2xl:w-[987px]">
  <picture>
    <source
      type="image/avif"
      srcset={src.replace("jpg", "avif")}
      media="(max-width: 1500px)"
    />
    <source
      type="image/webp"
      srcset={src.replace("jpg", "webp")}
      media="(max-width: 1500px)"
    />
    <img
      src={src}
      alt={`A screenshot of ${description}`}
      class="rounded-[20px] 2xl:rounded-[30px] w-full object-cover block"
    />
  </picture>
</div>
