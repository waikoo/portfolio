---
import HeroCircle from "./HeroCircle.astro";

const { surname, iconColor, occupation } = Astro.props;
const [first, second] = occupation.split(" ");
const translateXOnMobile =
  surname === "EVELIN"
    ? "translate-x-4 sm:translate-x-[52px]"
    : "sm:translate-x-[28px]";
---

<div
  class={`justify-self-end z-10 flex items-center gap-3 -translate-y-[90px] sm:-translate-y-[110px] text-[24px] sm:text-[34px] tracking-tighter ${translateXOnMobile}`}
>
  <HeroCircle iconColor={iconColor} />
  <div class="text-right">
    <p
      class="occupation mt-5 z-10"
      style={{
        color: iconColor,
      }}
    >
      {first}
    </p>
    <p
      class="occupation z-10 -translate-y-3 sm:-translate-y-5"
      style={{
        color: iconColor,
      }}
    >
      {second}
    </p>
  </div>
</div>

<style>
  p.occupation {
    font-family: "Jost", sans-serif;
    font-weight: 700;
  }
</style>
