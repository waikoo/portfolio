---
import Layout from "../../layouts/Layout.astro";
import PersonProjectCard from "../../components/PersonProjectCard.astro";
import { projects } from "../../projects/data";
import PersonLayout from "../../components/PersonLayout.astro";
import ContactForm from "../../components/ContactForm.astro";
import IntroBarna from "../../components/IntroBarna.astro";

const fullName = "Sz√°sz Barna";
const bgColor = "#0d1205";
---

<Layout title={`${fullName}'s Projects`} fullName={fullName}>
  <PersonLayout fullName={fullName} bgColor={bgColor}>
    <IntroBarna />

    <div
      class="w-[90%] lg:max-w-[960px] 2xl:max-w-[1400px] mx-auto pb-20 flex flex-col-reverse gap-[24px] lg:gap-20 mt-6"
    >
      {
        projects.map((project) => (
          <PersonProjectCard fullName={fullName} {...project} />
        ))
      }
    </div>

    <ContactForm lowercaseName="barna" />
  </PersonLayout>
</Layout>
