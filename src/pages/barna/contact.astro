---
import Layout from "../../layouts/Layout.astro";
import PersonLayout from "../../components/PersonLayout.astro";
import PersonContactItem from "../../components/PersonContactItem.astro";
import { extractName } from "../../utils/extractName";

const fullName = "Sz√°sz Barna";
const { name } = extractName(fullName);
---

<Layout title={`Contact ${fullName}`} fullName={fullName}>
  <PersonLayout fullName={fullName}>
    <main class="relative h-full grid place-items-center">
      <div class="flex flex-col items-center text-center pb-[200px]">
        <PersonContactItem
          name={name}
          title="Email"
          value="beroer@protonmail.com"
        />
        <PersonContactItem
          name={name}
          title="GitHub"
          value="https://github.com/waikoo"
        />
      </div>
    </main>
  </PersonLayout>
</Layout>
