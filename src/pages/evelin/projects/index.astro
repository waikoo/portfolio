---
import PersonProjectCard from "../../../components/PersonProjectCard.astro";
import PersonLayout from "../../../components/PersonLayout.astro";
import Layout from "../../../layouts/Layout.astro";
import { projects } from "../../../projects/evelinData";

const fullName = "Sz√°sz Evelin";
const bgColor = "#1c000c";
---

<Layout title={`${fullName}'s Projects`} fullName={fullName} bgColor={bgColor}>
  <PersonLayout fullName={fullName} bgColor={bgColor}>
    <div
      class="w-[90%] lg:max-w-[960px] 2xl:max-w-[1400px] mx-auto pb-20 flex flex-col flex-col- gap-[24px] lg:gap-20 mt-12"
    >
      {
        projects.map((project) => (
          <PersonProjectCard fullName={fullName} {...project} />
        ))
      }
    </div>
  </PersonLayout>
</Layout>
