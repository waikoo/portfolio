---
import Layout from "../../../layouts/Layout.astro";
import PageYProgressBar from "../../../components/PageYProgressBar.astro";
import PersonHeader from "../../../components/PersonHeader.astro";
import EvelinQuizzicalFile from "../../../components/EvelinQuizzicalFile.astro";
import QuizzicalHeroImg from "../../../components/QuizzicalHeroImg.astro";
import { extractName } from "../../../utils/extractName";
import EvelinQuizzicalFile2 from "../../../components/EvelinQuizzicalFile2.astro";
import QuizzicalAside from "../../../components/QuizzicalAside.astro";
import EvelinQuizzicalFile3 from "../../../components/EvelinQuizzicalFile3.astro";
import EvelinQuizzicalFile4 from "../../../components/EvelinQuizzicalFile4.astro";
import thriftstudioPreview from "../../../assets/images/thriftstudio_preview.jpg";
import ViewProjectCard from "../../../components/ViewProjectCard.astro";
import rpsPreview from "../../../assets/images/rps.png";

const fullName = "Sz√°sz Evelin";
const bgColor = "#E1CA02";
const cardBgColor = "#FFF3D4";
const { name, familyName } = extractName(fullName);
---

<Layout title="Quizzical" bgColor={bgColor} fullName={fullName}>
  <PageYProgressBar
    progressBarColor="#f76331"
    progressBarBgColor="transparent"
  />
  <PersonHeader
    fullName={fullName}
    familyName={familyName}
    name={name}
    color={bgColor}
    bgColor={bgColor}
  />

  <QuizzicalHeroImg />
  <main
    class="px-[40px] sm:px-[50px] xl:px-[84px] pb-[160px] mx-auto max-w-[1536px] font-['Jost'] text-[#001649]"
  >
    <div
      class="mt-[-31px] sm:mt-[-45px] xl:mt-[-12px] mx-auto flex flex-col gap-[30px] sm:gap-[50px] xl:gap-[80px]"
    >
      <EvelinQuizzicalFile
        fileTitle="OVERVIEW"
        bgColor={bgColor}
        cardBgColor={cardBgColor}
        id="quizzical-overview"
      />

      <EvelinQuizzicalFile2
        fileTitle="IDEATE"
        bgColor={bgColor}
        cardBgColor={cardBgColor}
        id="quizzical-ideate"
      />

      <EvelinQuizzicalFile3
        fileTitle="DESIGN"
        bgColor={bgColor}
        cardBgColor={cardBgColor}
        id="quizzical-design"
      />

      <EvelinQuizzicalFile4
        fileTitle="PROTOTYPE"
        bgColor={bgColor}
        cardBgColor={cardBgColor}
        id="quizzical-prototype"
      />
    </div>
    <QuizzicalAside bgColor={bgColor} />
  </main>

  <footer class="relative bg-[#141412] items-center">
    <div class="translate-y-[-80px] grid grid-cols-2">
      <ViewProjectCard
        name="THRIFTSTUDIO"
        source={thriftstudioPreview}
        imgClass="rounded-[10px] block max-w-full"
        arrowColor="#E296F5"
        arrowBg="transparent"
        imgHeight="138px"
        imgWidth="250px"
        className="left-0 right-0 bottom-[95px] max-w-[230px] mx-auto xl:cursor-pointer"
        link="/evelin/projects/thriftstudio"
      />
      <ViewProjectCard
        name="ROCK, PAPER, SCISSORS"
        source={rpsPreview}
        imgClass="rounded-[10px] block max-w-full"
        arrowColor="#E296F5"
        imgHeight="138px"
        imgWidth="250px"
        arrowBg="transparent"
        className="left-0 right-0 bottom-[95px] max-w-[230px] mx-auto xl:cursor-pointer"
        link="/evelin/projects/rps"
      />
      <div class="bg-[#141412] w-full"></div>
    </div>
  </footer>
</Layout>
