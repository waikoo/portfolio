---
import ContactForm from "../../components/ContactForm.astro";
import PersonContactItem from "../../components/PersonContactItem.astro";
import PersonLayout from "../../components/PersonLayout.astro";
import Layout from "../../layouts/Layout.astro";
import { extractName } from "../../utils/extractName";

const fullName = "Szász Evelin";
const { name } = extractName(fullName);
const bgColor = "#1c000c";
---

<Layout title={`Contact ${fullName}`} fullName={fullName}>
  <PersonLayout fullName={fullName} bgColor={bgColor}>
    <main
      class="relative flex justify-center items-center content-center my-[40px]"
    >
      <div
        class="flex flex-col gap-[20px] justify-center items-center text-center"
      >
        <PersonContactItem
          name={name}
          title="Email"
          value="neolor@protonmail.com"
        />
        <PersonContactItem
          name={name}
          title="Dribbble"
          value="https://dribbble.com/Lyonixa"
        />
        <PersonContactItem
          name={name}
          title="LinkedIn"
          value="https://www.linkedin.com/in/evelin-szász-3ba323358/"
        />
      </div>
    </main>
    <div
      class="motion-safe:animate-fade-right motion-safe:animate-once motion-safe:animate-duration-[1500ms] motion-safe:animate-ease-in-out"
    >
      <ContactForm lowercaseName="evelin" />
    </div>
  </PersonLayout>
</Layout>
