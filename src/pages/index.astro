---
import Layout from "../layouts/Layout.astro";
import HeroBackground from "../components/HeroBackground.astro";
import HeroPerson from "../components/HeroPerson.astro";
---

<Layout title="szasz.dev">
  <main class="relative w-screen h-screen">
    <HeroBackground />

    <div class="w-screen h-screen">
      <div class="w-full h-full grid place-items-center grid-cols-2">
        <a
          transition:name="hero"
          transition:animate="none"
          class="h-full w-full bg-[#0d7724] mix-blend-hard-light relative border-[1rem] border-red-800"
          href="/barna"
        >
          <HeroPerson
            name="SZÁSZ"
            surname="BARNA"
            color="#fbd3d3"
            gridColumn="1/2"
            gridRow="1/2"
            transition:name="hero"
          />
        </a>
        <a
          class="absolute w-[575px] h-[575px] bg-[#ffcf25] rounded-full mix-blend-exclusion top-[18rem] left-[18rem]"
          href="/barna"
        >
        </a>
        <p
          class="absolute left-[32rem] top-[35rem] text-[60px] text-right tracking-tight"
        >
          <span class="block -mb-[2.6rem]">Front-End</span>
          <span class="block">Developer</span>
        </p>

        <a
          transition:name="hero"
          transition:animate="none"
          href="/evelin"
          class="h-full w-full bg-[#fec8ff] col-start-2 col-end-3 row-start-1 row-end-1 mix-blend-overlay border-[1rem]"
        >
          <HeroPerson
            name="SZÁSZ"
            surname="EVELIN"
            color="black"
            gridColumn="2/3"
            gridRow="1/2"
            transition:name="hero"
          />
          <div
            class="absolute w-[575px] h-[575px] bg-[#f20000] rounded-full mix-blend-exclusion top-[19rem] right-[4rem]"
          >
          </div>
        </a>
        <p
          class="absolute right-[8rem] top-[35rem] text-[60px] text-right tracking-tight text-white"
        >
          <span class="block -mb-[2.6rem]">UI/UX</span>
          <span class="block">Designer</span>
        </p>
      </div>
    </div>
  </main>
</Layout>

<style>
  @font-face {
    font-family: "Jost-Bold";
    src: url("/fonts/Jost-Bold.ttf") format("truetype");
    font-weight: 700;
    font-style: normal;
    font-display: swap;
  }

  p {
    font-family: "Jost-Bold";
  }
</style>
