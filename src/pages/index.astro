---
import Layout from "../layouts/Layout.astro";
import HeroBackground from "../components/HeroBackground.astro";
import HeroPerson from "../components/HeroPerson.astro";
---

<Layout title="szasz.dev">
  <main class="relative w-screen h-screen overflow-hidden">
    <HeroBackground />

    <div class="absolute grid place-items-center w-screen h-screen">
      <div class="grid place-items-center grid-cols-2 grid-rows-2">
        <div transition:name="hero" transition:animate="none">
          <HeroPerson
            name="SZASZ"
            surname="BARNA"
            occupation="Front-End Developer"
            alignment="right"
            color="white"
            gridColumn="1/2"
            gridRow="1/2"
            transition:name="hero"
          />
        </div>

        <HeroPerson
          name="SZASZ"
          surname="EVELIN"
          occupation="UI/UX Designer"
          alignment="left"
          color="black"
          gridColumn="2/3"
          gridRow="2/3"
          transition:name="hero"
        />
      </div>
    </div>
  </main>
</Layout>
