<script>
  document.querySelectorAll("a").forEach((anchor) => {
    anchor.addEventListener("click", function (e) {
      e.preventDefault();

      const bg = document.querySelector(".bg");
      const barnaName = document.querySelector(".barna-name");
      const evelinName = document.querySelector(".evelin-name");

      if (bg && evelinName && barnaName) {
        if (anchor.children[1].textContent === "BARNA") {
          bg.classList.add("bg-barna-out");
          evelinName.classList.add("name-evelin-out");
        }

        if (anchor.children[1].textContent === "EVELIN") {
          bg.classList.add("bg-evelin-out");
          barnaName.classList.add("name-barna-out");
        }
      }

      setTimeout(() => {
        window.location.href = this.href;
      }, 500);
    });
  });
</script>
